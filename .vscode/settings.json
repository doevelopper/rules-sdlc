{
    "files.exclude": {
      "out/[^D]*/": true,
      "out/Debug/[^g]*": false,
      "out/Debug/g[^e]*": false,
      "out_*/**": true,
      "**/.git": true,
      "**/.svn": true,
      "**/.hg": true,
      "**/CVS": true,
      "**/.DS_Store": true,
      "**/.idea": true,
      "**/node_modules": true,
      "**/bazel-bin": true,
      "**/bazel-out": true,
      "**/bazel-testlogs": true,
      "**/bazel-rules-sdlc": true,
      "**/target": true,
      "**/bin/**": true,
      "**/obj/**": true,
      "**/packages/**": true,
      "**/Generated Files/**": true
    },
    "search.exclude": {
      "${workspaceFolder}/build": true,
      "**/bazel-bin": true,
      "**/bazel-out": true,
      "**/bazel-testlogs": true,
      "**/target": true,
      "**/bazel-rules_sdlc": true
  },

    "files.hotExit": "onExit",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/**": true,
      "**/dist/**": true,
      "**/public_gen/**": true
    },

    "C_Cpp.clang_format_path": "${workspaceRoot}/.clang-format",
    "C_Cpp.clang_format_sortIncludes": false,
    "C_Cpp.clang_format_formatOnSave": false,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.rightClickBehavior": "copyPaste",
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.rendererType": "dom",

    //"files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    //"files.trimTrailingWhitespace": true,

    "editor.tabSize": 4,
    // Insert spaces when pressing Tab. This setting is overriden
    // based on the file contents when `editor.detectIndentation` is true.
    // When opening a file, `editor.tabSize` and `editor.insertSpaces`
    // will be detected based on the file contents. Set to false to keep
    // the values you've explicitly set, above.
    "editor.detectIndentation": false,
    "editor.renderWhitespace": "all",
    "editor.insertSpaces": true,
    "workbench.colorCustomizations" : {
    //   "terminal.foreground" : "#1abe3ee3",
    //   "terminal.background" : "#020f299d",
    //   "terminal.ansiBrightBlue":"#babd0fe5",
